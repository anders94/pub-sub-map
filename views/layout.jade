    link(rel='apple-touch-icon-precomposed', sizes='114x114', href='/images/apple-touch-icon-114-precomposed.png');
    link(rel='apple-touch-icon-precomposed', sizes='72x72', href='/images/apple-touch-icon-72-precomposed.png');
    link(rel='apple-touch-icon-precomposed', href='/images/apple-touch-icon-57-precomposed.png');
    link(rel='apple-touch-startup-image', href='/images/splash.png')

    script(src='/javascripts/jquery.js')
    script(src='/javascripts/bootstrap.js')

  body
    div.navbar.navbar-fixed-top.navbar-inverse
      div.navbar-inner
        div.container-fluid
          a.btn.btn-navbar(data-toggle='collapse', data-target='.nav-collapse')
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.brand(href='/')
            img(src='/images/eyezo-logo.png', width='76', height='25')
          div.nav-collapse
            ul.nav
              li.active
                a(href='/')
                  i.icon-home.icon-white
                  |  Home
              li
                a(href='/about')
                  i.icon-file.icon-white
                  |  About
              li
                a(href='/contact')
                  i.icon-envelope.icon-white
                  |  Contact
          //
            form.navbar-form.form-inline.pull-right
              input(type='text', placeholder='Email').input-medium
              input(type='password', placeholder='Password').input-small
              button(type='submit').btn.btn-primary
                | Sign in

    div.container-fluid
      !=body

    //
      div.navbar.navbar-fixed-bottom
          div.navbar-inner
            div.container-fluid
              form.navbar-form.form-inline.pull-right
                input(type='text', placeholder='Email').input-medium.runaround
                input(type='password', placeholder='Password').input-small.runaround
                label.checkbox.runaround
                  input(type='checkbox')
                  span.help-inline Remember me
                button(type='submit').btn.btn-primary.runaround
                  | Sign in

  // Le javascript
  script(src='/socket.io/socket.io.js')
  // script(src='http://maps.googleapis.com/maps/api/js?sensor=false')
  script(src='https://maps.googleapis.com/maps/api/js?key=YOUR_API_KEY&sensor=false')
  script(src='/javascripts/eyezo.js')
  script(type='text/javascript')
    var header_height = 60;
    var footer_height = 15;
    var map_height_min = 350;

    function resize() {
      var non_map_content_height = header_height + footer_height;
      var map_height = map_height_min;
      var difference = $(window).height( ) - non_map_content_height;
      if ( difference > map_height )
        map_height = difference;

      $("#map").css( 'height', map_height );
    }
