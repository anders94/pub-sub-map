    meta(charset='utf-8')
    meta(name='description', content='EyeZo.com gives you a short URL for any location on Earth.')
    meta(name='author', content='Anders Brownworth')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')

    meta(name='HandheldFriendly', content='True')
    meta(name='MobileOptimized', content='320')
    meta(name='apple-mobile-web-app-capable', content='true')
    meta(name='apple-mobile-web-app-status-bar-style', content='black')
    meta(http-equiv='cleartype', content='on')

    // Le styles
    link(rel='stylesheet', type='text/css', href='/stylesheets/bootstrap.css')
    style
      body {
        padding-top: 60px; /* 60px to make the container start at the bottom of the topbar */
      }
    link(rel='stylesheet', type='text/css', href='/stylesheets/bootstrap-responsive.css')
    link(rel='stylesheet', type='text/css', href='/stylesheets/application.css')

